<div>
  <h1>Registro</h1>
  <div>
    <form action="/api/session/register" method="post">
      <label for="first_name"><strong>Nombre del usuario</strong></label><br />
      <input type="text" name="first_name" id="first_name" placeholder="introduzca su nombre" required/><br />
      <label for="last_name"><strong>Apellido</strong></label><br />
      <input type="text" name="last_name" id="last_name" placeholder="introduzca su apellido" required/><br />
      <label for="email"><strong>Email</strong></label><br />
      <input type="email" name="email" id="email" placeholder="introduzca su correo" required/><br />
      <label for="age"><strong>Edad</strong></label><br />
      <input type="number" name="age" id="age" placeholder="introduzca su edad" min="0" required/><br />
      <label for="password"><strong>Contraseña</strong></label><br />
      <input type="password" name="password" id="password" placeholder="introduzca su contraseña" required/><br />
      <button class="btn btn-primary" type="submit">Registrar</button>
    </form>
  </div>
</div>